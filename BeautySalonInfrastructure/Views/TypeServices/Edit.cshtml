@model BeautySalonDomain.Model.TypeService

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування</h1>

<h4>Категорія</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" onkeypress="return onlyAllowLetters(event)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="edit-or-back">
                <input type="submit" value="Зберегти" class="btn btn-outline-primary" />
                <a class="btn" asp-action="Index">Відмінити</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/onlyAllowLetters.js"></script>

}
