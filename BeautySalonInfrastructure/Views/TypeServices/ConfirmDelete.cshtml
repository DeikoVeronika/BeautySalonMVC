@model BeautySalonDomain.Model.TypeService

@{
    ViewData["Title"] = "Підтвердження видалення";
}

<h1>Підтвердження видалення</h1>

<h3>Ви впевнені що хочете видалити цю категорію? Наступні дані будуть видалені</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete" asp-controller="TypeServices" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="confirmed" value="true" />
        <input type="submit" value="Підтвердити видалення" class="btn btn-danger" />
        <a class="btn" asp-action="Index">Відмінити</a>
    </form>
</div>
