@model IEnumerable<BeautySalonDomain.Model.Position>

@{
    ViewData["Title"] = "Посади працівників";
}

<h1>Посади працівників</h1>


<table class="table">
    <thead>
        <tr class="table-titles">
            <th class="table-name">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <a class="btn btn-outline-primary" asp-action="Create">Створити нову посаду</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.Name))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Переглянути працівників</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
