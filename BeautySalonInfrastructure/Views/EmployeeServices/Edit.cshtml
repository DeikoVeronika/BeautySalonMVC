@model BeautySalonDomain.Model.EmployeeService

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування</h1>

<h4>EmployeeService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServicesId" class="control-label"></label>
                <select asp-for="ServicesId" class="form-control" asp-items="ViewBag.ServicesId as SelectList"></select> <!-- Змінюємо цей рядок -->
                <span asp-validation-for="ServicesId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeesId" class="control-label"></label>
                <select asp-for="EmployeesId" class="form-control" asp-items="ViewBag.EmployeesId"></select>
                <span asp-validation-for="EmployeesId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="edit-or-back">
                <input type="submit" value="Зберегти" class="btn btn-outline-primary" />
                <a class="btn" asp-action="Index">Відмінити</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
