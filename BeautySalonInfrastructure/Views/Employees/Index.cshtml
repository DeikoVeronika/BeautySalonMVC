@model IEnumerable<BeautySalonDomain.Model.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Працівники посади «@ViewBag.PositionName» </h1>

<p>
    @Html.ActionLink("Додати нового працівника", "Create", new { positionsId = ViewBag.PositionsId })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.Positions)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.Positions.Name)
            </td> *@
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
