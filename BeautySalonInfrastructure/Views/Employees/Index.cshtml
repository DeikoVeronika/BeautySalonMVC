@model IEnumerable<BeautySalonDomain.Model.Employee>

@{
    ViewData["Title"] = "Працівники посади";
}

<h1>Працівники посади «@ViewBag.PositionName» </h1>

<table class="table">
    <thead>
        <tr>
            <th class="table-name">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.ActionLink("Додати нового працівника", "Create", new { positionsId = ViewBag.PositionsId }, new { @class = "btn btn-outline-primary" })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.Name))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
