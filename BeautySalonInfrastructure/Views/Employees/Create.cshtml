@model BeautySalonDomain.Model.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Додати @ViewBag.PositionName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositionsId" class="control-label"></label>
                @Html.DropDownList("PositionsId", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="PositionsId" class="text-danger"></span>
            </div>
            <div class="create-or-back">
                <input class="btn btn-outline-primary" type="submit" value="Створити" />
                <a class="btn" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
