@model BeautySalonDomain.Model.Service

@{
    ViewData["Title"] = "Редагування послуги";
}

<h1>Редагування послуги</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" oninput="validateIntegerInput(this)" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeServiceId" class="control-label"></label>
                <select asp-for="TypeServiceId" class="form-control" asp-items="ViewBag.TypeServices"></select>
                <span asp-validation-for="TypeServiceId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="edit-or-back">
                <input type="submit" value="Зберегти" class="btn btn-outline-primary" />
                <a class="btn"  asp-action="Index">Відмінити</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/validateIntegerInput.js"></script>

}
