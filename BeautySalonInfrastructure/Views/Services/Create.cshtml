@model BeautySalonDomain.Model.Service

@{
    ViewData["Title"] = "Створення послуги";
}

<h1>Додавання послуги @ViewBag.TypeServiceName</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" oninput="validateIntegerInput(this)" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeServiceId" class="control-label"></label>
                @Html.DropDownListFor(model => model.TypeServiceId, ViewBag.TypeServices as SelectList, new { @class = "form-control", id = "myTypeServiceDropdown" })
                <span asp-validation-for="TypeServiceId" class="text-danger"></span>
            </div>





            <div class="create-or-back">
                <input class="btn btn-outline-primary" type="submit" value="Створити" />
                <a class="btn" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="/js/validateIntegerInput.js"></script>
        <script src="/js/site.js"></script>
        <script src="/js/FormInputManager.js"></script>
    }
}
