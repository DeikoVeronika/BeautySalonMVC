@model BeautySalonDomain.Model.Reservation

@{
    ViewData["Title"] = "Створення бронювання";
}

<h1>Створення бронювання</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientsId" class="control-label"></label>
                <select asp-for="ClientsId" class ="form-control" asp-items="ViewBag.ClientsId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ServicesId" class="control-label"></label>
                <select asp-for="ServicesId" class ="form-control" asp-items="ViewBag.ServicesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SchedulesId" class="control-label"></label>
                <select asp-for="SchedulesId" class ="form-control" asp-items="ViewBag.SchedulesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="create-or-back">
                <input class="btn btn-outline-primary" type="submit" value="Створити" />
                <a class="btn" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
