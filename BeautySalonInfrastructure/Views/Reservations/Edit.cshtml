@model BeautySalonDomain.Model.Reservation

@{
    ViewData["Title"] = "Редагування броні";
}

<h1>Редагування броні</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientsId" class="control-label"></label>
                <select asp-for="ClientsId" class="form-control" asp-items="ViewBag.ClientsId"></select>
                <span asp-validation-for="ClientsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicesId" class="control-label"></label>
                <select asp-for="ServicesId" class="form-control" asp-items="ViewBag.ServicesId"></select>
                <span asp-validation-for="ServicesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchedulesId" class="control-label"></label>
                <select asp-for="SchedulesId" class="form-control" asp-items="ViewBag.SchedulesId"></select>
                <span asp-validation-for="SchedulesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="edit-or-back">
                <input type="submit" value="Зберегти" class="btn btn-outline-primary" />
                <a class="btn" asp-action="Index">Відмінити</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
