@model BeautySalonDomain.Model.Client

@{
    ViewData["Title"] = "Створення клієнта";
}

<h1>Створення клієнта</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Введіть Ім'я" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" placeholder="Введіть Ім'я" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input type="text" id="phoneInput" asp-for="Phone" class="form-control" placeholder="+380 (__) ___-__-__" data-mask="+380 (__) ___-__-__" inputmode="numeric" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" placeholder="DD.MM.YYYY" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Введіть Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="create-or-back">
                <input class="btn btn-outline-primary" type="submit" value="Створити клієнта" />
                <a class="btn" asp-action="Index">Відмінити створення</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="/js/site.js"></script>
    <script src="/js/phone.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>

}
